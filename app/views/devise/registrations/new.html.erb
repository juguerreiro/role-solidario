<h2>Crie seu cadastro</h2>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name, label: 'Nome',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Nome" }%>
      <%= f.input :last_name, label: 'Sobrenome',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Sobrenome" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Email" }%>
      <%= f.input :password, label: 'Senha',
                  required: true,
                  hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                  input_html: { autocomplete: "Senha nova" } %>
      <%= f.input :password_confirmation, label: 'Confirme sua senha',
                  required: true,
                  input_html: { autocomplete: "Senha nova" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Cadastre-se" %>
    </div>
    <% end %>

  <%= render "devise/shared/links" %>

</div>
