<div class="container">


  <h2>Editar meu perfil <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :first_name, label: "Nome",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :first_name, label: "Sobrenome",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password, label: "Nova Senha",
                  hint: "Deixe em branco se voc√™ n√£o deseja trocar",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: "Nova Senha novamente",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password, label: "Confirme sua senha",
                  hint: "Precisamos da sua senha para confirmar as modifica√ß√µes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>


  <div class="d-flex align-items-center">
    <div>N√£o est√° gostando?</div>
    <%= button_to "Cancelar conta", registration_path(resource_name), data: { confirm: "Tem certeza? üòî  " }, method: :delete, class: "btn btn-link" %>
  </div>

  <%= link_to "Voltar", :back %>

</div>
